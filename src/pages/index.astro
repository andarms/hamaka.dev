---
import "../styles/global.css";

import Card from "../components/card.astro";
import Background from "../components/gradient-bg.astro";
import Header from "../components/header.astro";

const year = new Date().getFullYear();

let projects = await Astro.glob("../pages/projects/**/index.mdx");
projects.sort((a, b) => (a.frontmatter.id < b.frontmatter.id ? 1 : -1));
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/images/hamaka.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />

		<title>Hamaka</title>
	</head>
	<body
		class="bg-white text-gray-800 dark:bg-gray-900 dark:text-white scroll-smooth relative"
	>
		<Header />
		<div
			class="flex w-full max-w-7xl mx-auto gap-16 z-10 mt-12 rounded-lg relative"
		>
			<main class="w-full mx-auto px-8 lg:p-0">
				<section id="hero" class="flex flex-col md:flex-row">
					<div class="pt-24 md:py-24 flex-1" id="header">
						<hgroup>
							<h2
								class="text-2xl text-gray-700 dark:text-gray-200"
							>
								<span>Hola</span>
								<span class="animate-wiggle">👋🏽</span>,
								<span>¡Bienvenido a Hamaka!</span>
							</h2>
							<h1 class="text-4xl md:text-6xl font-black mb-4">
								Aquí te enseñamos a desarrollar software con
								proyectos reales <span
									class="font-black text-transparent bg-clip-text bg-gradient-to-r from-orange-400 to-primary background-animate"
									>desde cero hasta producción</span
								>
							</h1>
						</hgroup>
						<p class="text-xl">
							En Hamaka aprenderás a crear aplicaciones sólidas,
							eficientes y escalables aplicando las mejores
							prácticas de desarrollo. Y lo mejor de todo: <strong
								>¡sin gastar un solo centavo!</strong
							>
						</p>
						<div class="py-8">
							<a
								class="bg-primary hover:bg-primary/80 font-black text-white rounded-full text-xl px-8 py-2 flex flex-col w-fit cursor-pointer opacity-80"
							>
								<span class="text-sm text-center"
									>Próximamente</span
								>
								<span> Ver la lista de proyectos</span>
							</a>
						</div>
					</div>

					<div
						class="my-4 w-4/12 flex items-center justify-center h-auto mx-auto"
					>
						<Background />
					</div>
				</section>

				<section class="mb-8">
					<div class="text-3xl text-center">
						Déjanos tu email y te avisaremos cuando esté lista.👇🏽
					</div>
					<div>
						<label
							for="name"
							class="block text-sm font-medium text-gray-700"
							>Name</label
						>
						<input
							type="text"
							id="name"
							name="name"
							class="mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md"
						/>
					</div>
				</section>

				<footer class="w-full text-center py-8">
					<div>
						<a
							href="https://storyset.com/people"
							class="hover:underline"
							>People illustrations by Storyset</a
						>
					</div>
					<div>
						© {year} Hamaka | Made with 🖤 by
						<a
							href="https://github.com/andarms"
							class="text-primary hover:underline"
						>
							Adrian Manjarres
						</a>
						in 🇨🇴
					</div>
				</footer>
			</main>
		</div>
	</body>
</html>
