---
import "@fontsource/quicksand";
import "@fontsource/montserrat";

import Card from "../components/card.astro";
import Background from "../components/gradient-bg.astro";
import ThemeSwicher from "../components/theme-switcher.astro";

const year = new Date().getFullYear();

const projects = await Astro.glob("../content/index/*.md");

const headline = "Aprende desarrollo web con nuestros proyectos".split(" ");

const links = ["Inicio", "Blog", "Contacto", "Acerca de"];
---

<style>
	@import url("https://fonts.googleapis.com/css2?family=Quicksand:wght@400;700&display=swap");

	@tailwind base;
	@tailwind components;
	@tailwind utilities;

	@layer base {
		:root {
			--color-primary: #ff3b30;
			--color-secondary: #9dbb2f;
		}
	}
	html {
		scroll-behavior: smooth;
	}

	*,
	body {
		box-sizing: border-box;
	}

	.background-animate {
		background-size: 400%;
		animation: AnimationName 3s ease-in-out infinite;
	}

	@keyframes AnimationName {
		0%,
		100% {
			background-position: 0% 50%;
		}
		50% {
			background-position: 100% 50%;
		}
	}
</style>

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/images/hamaka.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />

		<title>Hamaka</title>
	</head>
	<body
		class="bg-white text-gray-800 dark:bg-gray-900 dark:text-white scroll-smooth relative"
	>
		<header>
			<ThemeSwicher />
		</header>
		<div
			class="flex w-full max-w-7xl mx-auto gap-16 z-10 mt-12 rounded-lg relative"
		>
			<main class="w-full mx-auto px-8 lg:p-0">
				<section id="hero" class="flex flex-col md:flex-row">
					<div class="pt-24 md:py-24 flex-1" id="header">
						<hgroup>
							<h2
								class="text-2xl text-gray-700 dark:text-gray-200"
							>
								<span>Hola</span>
								<span class="animate-wiggle">游녦游낗</span>,
								<span>춰Bienvenido a Hamaka!</span>
							</h2>
							<h1 class="text-4xl md:text-6xl font-black mb-4">
								Aprende a desarrollar software con
								<span
									class="font-black text-transparent bg-clip-text bg-gradient-to-r from-orange-400 to-primary background-animate"
								>
									proyectos reales
								</span> desde cero hasta producci칩n
							</h1>
						</hgroup>
						<p class="text-xl">
							Aprender치s a crear aplicaciones s칩lidas, eficientes
							y escalables aplicando las mejores pr치cticas de
							desarrollo, y todo sin gastar un solo centavo.
						</p>
						<div class="py-8">
							<button
								class="bg-gradient-to-r from-orange-400 to-primary font-black text-white rounded-full text-xl px-4 py-2"
								>Ver la lista de proyectos</button
							>
						</div>
					</div>
					<div
						class="my-4 w-4/12 flex items-center justify-center h-auto mx-auto"
					>
						<Background />
					</div>
				</section>

				<section class="py-4" id="projects">
					<h2 class="text-3xl font-black mb-8">Ultimos Proyectos</h2>
					<div class="grid grid-cols-1 md:grid-cols-2 gap-8">
						{
							projects
								.slice(0, 3)
								.map((post) => <Card post={post} />)
						}
					</div>
				</section>

				<footer class="w-full text-center py-8">
					<div>
						<a
							href="https://storyset.com/people"
							class="hover:underline"
							>People illustrations by Storyset</a
						>
					</div>
					<div>
						춸 {year} Hamaka | Made with 游둯 by
						<a
							href="https://github.com/andarms"
							class="text-primary hover:underline"
						>
							Adrian Manjarres
						</a>
						in 游뻟릖
					</div>
				</footer>
			</main>
		</div>
	</body>
</html>
