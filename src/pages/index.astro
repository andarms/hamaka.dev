---
import "../styles/global.css";

import Card from "../components/card.astro";
import Background from "../components/gradient-bg.astro";
import Header from "../components/header.astro";
import { Newsletter } from "../components/react/newsletter";

const year: number = new Date().getFullYear();

let projects = await Astro.glob("../pages/projects/**/index.mdx");
projects.sort((a, b) => (a.frontmatter.id < b.frontmatter.id ? 1 : -1));
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/images/hamaka.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<link rel="sitemap" href="/sitemap-index.xml" /><link
			rel="sitemap"
			href="/sitemap-index.xml"
		/>
		<title>Hamaka</title>
	</head>
	<body
		class="relative text-gray-800 bg-white dark:bg-gray-900 dark:text-white scroll-smooth"
	>
		<Header />
		<div
			class="relative z-10 flex w-full gap-16 mx-auto mt-12 rounded-lg max-w-7xl"
		>
			<main class="w-full px-8 mx-auto lg:p-0">
				<section id="hero" class="flex flex-col md:flex-row">
					<div class="flex-1 pt-24 md:py-24" id="header">
						<hgroup>
							<h2
								class="text-2xl text-gray-700 dark:text-gray-200"
							>
								<span>Hola</span>
								<span class="animate-wiggle">👋🏽</span>,
								<span>¡Bienvenido a Hamaka!</span>
							</h2>
							<h1 class="mb-4 text-4xl font-black md:text-6xl">
								Aquí te enseñamos a desarrollar software con
								proyectos reales <span
									class="font-black text-transparent bg-clip-text bg-gradient-to-r from-orange-400 to-primary background-animate"
									>desde cero hasta producción</span
								>
							</h1>
						</hgroup>
						<p class="text-xl">
							En Hamaka aprenderás a crear aplicaciones sólidas,
							eficientes y escalables aplicando las mejores
							prácticas de desarrollo. Y lo mejor de todo: <strong
								>¡sin gastar un solo centavo!</strong
							>
						</p>
					</div>

					<div
						class="flex items-center justify-center w-4/12 h-auto mx-auto my-4"
					>
						<Background />
					</div>
				</section>

				<section
					class="flex flex-col w-full mx-auto mb-24 text-centar md:w-8/12"
				>
					<div class=""></div>
					<Newsletter client:load />
				</section>

				<footer class="w-full text-center">
					<div>
						<a
							href="https://storyset.com/people"
							class="text-sm hover:underline"
							>People illustrations by Storyset</a
						>
					</div>
					<div>
						© {year} Hamaka | Made with 🖤 by
						<a
							href="https://github.com/andarms"
							class="text-primary hover:underline"
						>
							Adrian Manjarres
						</a>
						in 🇨🇴
					</div>
				</footer>
			</main>
		</div>
	</body>
	<!-- Google tag (gtag.js) -->
	<script async src="https://www.googletagmanager.com/gtag/js?id=G-0F37XSET2N"
	></script>
	<script>
		window.dataLayer = window.dataLayer || [];
		function gtag() {
			dataLayer.push(arguments);
		}
		gtag("js", new Date());
		gtag("config", "G-0F37XSET2N");
	</script>
</html>
